@model Web.Models.EquipoFormViewModel

@{
    ViewBag.Title = "Equipos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
 <div class="panel panel-primary">
    <div class="panel-heading"><font size="5">Equipos</font></div>
    <div class="panel-body">
        <div class="panel panel-success">
            <div class="panel-heading"><font size="4">Nuevo Equipo</font></div>
            <div class="panel-body">
                <div class="editor-label">@Html.Label("Identificador")</div>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.identificador, new { style = "width: 499px;" })
                    <font color="red"><b>&nbsp;@Html.ValidationMessageFor(model => model.identificador)</b></font>
                </div>

                <p></p>

                <div class="editor-label">@Html.Label("Número de serie")</div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.nroSerie, new { style = "width: 499px;" })
                    <font color="red"><b>&nbsp;@Html.ValidationMessageFor(model => model.nroSerie)</b></font>
                </div>

                <p></p>

                <div class="editor-label">
                    @Html.Label("Cuenta")
                    &ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;
                    &ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;
                    &ensp;&ensp;&ensp;&ensp;&ensp;&ensp;
                    @Html.Label("Tipo de Equipo")
                </div>
                <div class="editor-field">
                    @Html.DropDownList("idCuenta", String.Empty)
                    &ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;
                    &ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;
                    @Html.DropDownList("idEquipoTipo", String.Empty)
                    <font color="red"><b>&nbsp;@Html.ValidationMessageFor(model => model.idEquipoTipo)</b></font>
                </div>

                <p></p>

                <div class="editor-label">@Html.Label("Versión de Firmware")</div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.versionFirmware, new { style = "width: 499px;" })
                    <font color="red"><b>&nbsp;@Html.ValidationMessageFor(model => model.versionFirmware)</b></font>
                </div>

                <p></p>

                <div class="editor-label">@Html.Label("Versión de Programación")</div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.versionProgramacion, new { style = "width: 499px;" })
                    <font color="red"><b>&nbsp;@Html.ValidationMessageFor(model => model.versionProgramacion)</b></font>
                </div>

                <p></p>

                <div class="editor-label">@Html.Label("Estado SD")</div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.estadoSd, new { style = "width: 499px;" })
                    <font color="red"><b>&nbsp;@Html.ValidationMessageFor(model => model.estadoSd)</b></font>
                </div>

                <p></p>

                <div>
                    <table>
                        <tr>
                            <td>@Html.Label("Portable") &ensp;</td>
                            <td>@Html.EditorFor(model => model.portable) &ensp;&ensp;&ensp;&ensp;&ensp; </td>
                            <td>@Html.Label("Primario") &ensp;</td>
                            <td>@Html.EditorFor(model => model.primario) &ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;</td>
                            <td>@Html.Label("Cadencia") &nbsp</td>
                            <td>@Html.EditorFor(model => model.cadencia)<font color="red"><b>&nbsp;&ensp;@Html.ValidationMessageFor(model => model.cadencia)</b></font></td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="panel-footer">
                <a href="@Url.Action("./")" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                    Volver a la lista
                </a>
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                    Crear
                </button>
            </div>
        </div>
    </div>
</div>   
}